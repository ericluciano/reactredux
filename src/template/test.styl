border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

mrg(args)
  margin: args

font = 'Poppins', sans-serif
font-md = 16px
font-sm = 14px

body
  font-size: font-sm
  font-family: font
  font-smoothing: antialiased;
  text-rendering: optimizeLegibility;

.header-bg
  padding-left:10px
  padding-right:10px
  background:#006699
  min-height:100px

.inline
  display:inline

.panel
  margin:0 auto
  max-width:320px

.form-group
  min-height:40px

.card
    font-size: 1em
    overflow: hidden
    padding: 0
    border: none
    border-radius: .28571429rem
    box-shadow: 0 1px 3px 0 #d4d4d5, 0 0 0 1px #d4d4d5
    margin-bottom:20px
    cursor:pointer


.card-block
    font-size: 1em
    position: relative
    margin: 0
    padding: 1em
    border: none
    border-top: 1px solid rgba(34, 36, 38, .1)
    box-shadow: none


.card-img-top
    display: block
    width: 100%
    height: auto


.card-title
    font-size: 1.28571429em
    font-weight: 700
    line-height: 1.2857em


.card-text
    clear: both
    margin-top: .5em
    color: rgba(0, 0, 0, .68)


.card-footer
    font-size: 1em
    position: static
    top: 0
    left: 0
    max-width: 100%
    padding: .75em 1em
    color: rgba(0, 0, 0, .4)
    border-top: 1px solid rgba(0, 0, 0, .05) !important
    background: #fff


.card-inverse
  .btn
    border: 1px solid rgba(0, 0, 0, .05)

.pergunta
  font-family: font
  font-weight:bold

.loading
  position:fixed
  top:0px
  right:0px
  width:100%
  height:100%
  background-color:#fff
  background-image:url('http://mixriofm.uol.com.br/uploads/loading.gif')
  background-repeat:no-repeat
  background-position:center
  z-index:100000

.fullscreen
    z-index: 9999;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
